{
  "extends": "@dxsixpc/configs/tsconfig/tsconfig.vue.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    ".eslintrc.js",
    "vite.config.ts",
    "vitest.config.ts",
    "commitlint.config.js"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "outDir": "dist",
    "ignoreDeprecations": "5.0",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
